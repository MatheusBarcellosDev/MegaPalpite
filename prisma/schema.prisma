generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model Game {
  id            String   @id @default(uuid())
  userId        String   @map("user_id")
  lotteryType   String   @default("megasena") @map("lottery_type")
  numbers       Int[]
  explanation   String?
  strategy      String?  @default("balanced") // 'balanced', 'hot', 'cold', 'mixed', 'repeater'
  contestNumber Int      @map("contest_number")
  createdAt     DateTime @default(now()) @map("created_at")
  result        Result?

  @@map("games")
}

model Contest {
  id             Int      @id                           // NÃºmero do concurso
  lotteryType    String   @default("megasena") @map("lottery_type")
  drawDate       DateTime @map("draw_date")
  nextDrawDate   DateTime? @map("next_draw_date")
  drawnNumbers   Int[]    @map("drawn_numbers")
  jackpotValue   Decimal  @map("jackpot_value")
  isAccumulated  Boolean  @default(false) @map("is_accumulated")
  nextJackpot    Decimal? @map("next_jackpot")
  winnersData    Json?    @map("winners_data")          // JSON com ganhadores
  fetchedAt      DateTime @default(now()) @map("fetched_at")

  @@map("contests")
}

model Result {
  id        String   @id @default(uuid())
  gameId    String   @unique @map("game_id")
  hits      Int
  checkedAt DateTime @default(now()) @map("checked_at")
  game      Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@map("results")
}
